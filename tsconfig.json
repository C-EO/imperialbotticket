{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src/",
        "allowJs": true,
        "module": "CommonJS",
        "target": "ESNext",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/"
    },
    "include": [
        "./src/**/*",
    ]
}